@inherits ComponentBase

@code {
    [Parameter]
    public required TypeLinkTM Type { get; set; }
}

<span class="refdocgen-text-secondary">
    @if (Type.Url is not null)
    {
        <a href="@Type.Url" class="refdocgen-link-secondary">
            <LanguageSpecificStrings Data="Type.Name" />
        </a>
    }
    else
    {
        <LanguageSpecificStrings Data="Type.Name" />
    }
</span>
