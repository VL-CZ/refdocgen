@inherits ComponentBase

@code {
    [Parameter]
    public required string Contents { get; set; }

    [Parameter]
    public required (string, string)[] Pages { get; set; }

    [Parameter]
    public required string CustomStyles { get; set; }

    [Parameter]
    public required int NestingLevel { get; set; }
}


<CascadingValue Value="Pages">
    <CascadingValue Value="CustomStyles">
        <CascadingValue Value="NestingLevel">
            <LayoutView Layout="typeof(AppLayout)">
                @((MarkupString)Contents)
            </LayoutView>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>
