@using RefDocGen.TemplateGenerators.Default.TemplateModels.Types
@inherits ComponentBase

@code {
    [Parameter]
    public required EnumTypeTM Model { get; set; }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <!-- Custom CSS, TODO: move to separate file -->
    <style>
        .display-1 {
            font-size: 4rem;
        }

        .display-2 {
            font-size: 3.5rem;
        }

        .display-3 {
            font-size: 3rem;
        }

        .display-4 {
            font-size: 2.5rem;
        }

        .display-5 {
            font-size: 2rem;
        }

        .display-6 {
            font-size: 1.5rem;
        }
    </style>
</head>

<body>
    <MenuComponent />

    <div class="container my-4">

        <DeclaredTypeName TypeName="@Model.Name" TypeKindName="enum" Modifiers="@Model.Modifiers" />

        <NamespaceLink Namespace="@Model.Namespace" />

        <p class="text-muted">
            <i>@Model.SummaryDocComment</i>

            <!-- Remarks doc comment -->
            <RemarksDocumentation DocComment="@Model.RemarksDocComment" />
        </p>
        <hr />

        <h2 class="display-5 mt-2">Members</h2>
        <div class="row">
            <div class="col-md-12">
                @foreach (var enumMember in Model.Members)
                {
                    <div class="border p-2 mb-2">
                        <h6 class="mb-1">
                            <samp>
                                <span class="text-dark">
                                    @enumMember.Name
                                </span>
                            </samp>
                        </h6>
                        <p class="text-muted mb-0">
                            <i>@enumMember.SummaryDocComment</i>

                            <RemarksDocumentation DocComment="@enumMember.RemarksDocComment" />
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
