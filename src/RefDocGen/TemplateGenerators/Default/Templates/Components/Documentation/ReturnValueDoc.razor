@inherits ComponentBase

@code {

    [Parameter]
    public required GenericTypeLinkTM Type { get; set; }

    [Parameter]
    public required string? DocComment { get; set; }
}

<h3 class="lead my-2">Returns</h3>
<div class="mx-2" data-id="returns-section">
    <samp data-id="return-type-name">
        <GenericTypeLink Type="@Type" />
    </samp>
    <div class="text-body-secondary" data-id="returns-doc">
        @if (DocComment is not null)
        {
            <i>@((MarkupString)DocComment)</i>
        }
    </div>
</div>
