@using RefDocGen.TemplateGenerators.Default.TemplateModels.Members
@inherits ComponentBase

@code {
    [Parameter]
    public required IEnumerable<ExceptionTM> Exceptions { get; set; }
}

@if (Exceptions.Any())
{
    <div class="mt-3">
        <div class="lead">Exceptions</div>
        @foreach (var exception in Exceptions)
        {
            <div class="mb-2">
                <span>@exception.Type.Name</span>

                @if (exception.DocComment is not null)
                {
                    <i>@((MarkupString)exception.DocComment)</i>
                }
            </div>
        }
    </div>
}
