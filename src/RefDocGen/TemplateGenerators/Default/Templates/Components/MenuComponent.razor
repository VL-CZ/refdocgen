@using RefDocGen.TemplateGenerators.Shared.TemplateModels.Menu
@using RefDocGen.TemplateGenerators.Shared.TemplateTools
@using RefDocGen.TemplateGenerators.Shared.Tools
@inherits ComponentBase

@code {
    [CascadingParameter]
    public required TopMenuDataTM TopMenuData { get; set; }

    [Parameter]
    public required int NestingLevel { get; set; }
}


<nav class="navbar navbar-expand-lg sticky-top menu-bg">
    <div class="container">

        @{
            string indexPagePath = UrlHelper.GetRelativeUrl("index.html", NestingLevel);
            string searchPagePath = UrlHelper.GetRelativeUrl("search.html", NestingLevel);
        }

        <a class="navbar-brand" href="@indexPagePath">Project name</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav">

                @foreach (var p in TopMenuData.Pages)
                {
                    var pagePath = UrlHelper.GetRelativeUrl(p.Url, NestingLevel);

                    <li class="nav-item">
                        <a class="nav-link" href="@pagePath">@p.PageName</a>
                    </li>
                }

                @foreach (var f in TopMenuData.Folders)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @f.Name
                        </a>
                        <ul class="dropdown-menu">

                            @foreach (var p in f.Pages)
                            {
                                var pagePath = UrlHelper.GetRelativeUrl(p.Url, NestingLevel);

                                <li>
                                    <a class="dropdown-item" href="@pagePath">
                                        @p.PageName
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }

            </ul>
            <ul class="navbar-nav ms-auto">

                <li class="nav-item">
                    <select class="form-select" id="language-selector" aria-label="language">
                        <option class="lang-option" value="csharp-lang">C#</option>
                        <option class="lang-option" value="other-lang">Other</option>
                    </select>
                </li>

                <li class="nav-item d-flex align-items-center">
                    <form role="search" class="me-2">
                        <input class="form-control" autocomplete="off"
                               type="search" placeholder="Search" aria-label="Search" id="menu-search-bar" url-target="@searchPagePath" readonly>
                    </form>
                </li>

                <li class="nav-item" id="theme-switcher">
                    <button class="nav-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brightness-high" viewBox="0 0 16 16">
                            <!-- Brightness icon, taken from https://icons.getbootstrap.com/icons/brightness-high/ -->
                            <path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708" />
                        </svg>
                    </button>
                </li>
            </ul>
        </div>
    </div>
</nav>

<style>
    .invisible{
        display: none;
    }
</style>

<script>

    const allLangs = Array.from(document.getElementsByClassName('lang-option'))
                          .map(option => option.value);

    document.getElementById('language-selector').addEventListener('change', function () {
        const selectedLang = this.value;

        // Hide all language-specific elements by adding the .invisible class
        allLangs.forEach(lang => {
            const elements = document.getElementsByClassName(lang);
            Array.from(elements).forEach(el => {
                el.classList.add('invisible');
            });
        });

        // Show selected language elements by removing the .invisible class
        const selectedLangElements = document.getElementsByClassName(selectedLang);
        Array.from(selectedLangElements).forEach(el => {
            el.classList.remove('invisible');
        });

        localStorage.setItem('refdocgen-displayed-language', selectedLang);
    });
</script>
