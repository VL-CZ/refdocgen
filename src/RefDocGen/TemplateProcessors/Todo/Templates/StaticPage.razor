@using RefDocGen.TemplateProcessors.Shared.TemplateModels.Language
@using RefDocGen.TemplateProcessors.Shared.TemplateModels.Menu
@inherits ComponentBase

@code {

    /// <summary>
    /// HTML contents of the static page body (&lt;body&gt; element not included).
    /// </summary>
    [Parameter]
    public required string Contents { get; set; }

    /// <summary>
    /// The links and folders to be included in the top menu.
    /// </summary>
    [Parameter]
    public required TopMenuDataTM TopMenuData { get; set; }

    /// <summary>
    /// Path to the custom CSS file, contained in the static pages folder.
    ///
    /// The path is relative to the static pages folder.
    /// </summary>
    ///
    [Parameter]
    public required string CustomStyles { get; set; }

    /// <summary>
    /// Nesting level of the static page; i.e., its depth relative to the static pages directory.
    /// </summary>
    [Parameter]
    public required int NestingLevel { get; set; }

    /// <summary>
    /// An array containing the available versions of the page;
    /// for each version, its identifier is stored.
    ///
    /// <c>null</c>, if the documentation is not versioned.
    /// </summary>
    [Parameter]
    public required string[]? Versions { get; set; }

    /// <summary>
    /// An array of the available languages.
    /// </summary>
    [Parameter]
    public required LanguageTM[] Languages { get; set; }
}
