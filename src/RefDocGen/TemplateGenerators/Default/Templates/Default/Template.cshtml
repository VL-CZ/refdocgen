@model RefDocGen.TemplateGenerators.Default.TemplateModels.ClassTemplateModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @Model.Name
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container my-4">
        <h1>Class @Model.Name</h1>
        <p class="text-muted">
            <i>@Model.DocComment</i>
        </p>

        <h2>Fields</h2>
        <div class="row">
            <div class="col-md-12">
                @foreach (var field in Model.Fields)
                {
                    <div class="border p-2 mb-2">
                        <h5 class="mb-1">
                            <samp>
                                <span class="text-primary">
                                    @string.Join(' ', field.Modifiers)
                                </span>
                                <span class="text-secondary">
                                    @field.Type @field.Name
                                </span>
                            </samp>
                        </h5>
                        <p class="text-muted mb-0">
                            <i>@field.DocComment</i>
                        </p>
                    </div>
                }
            </div>
        </div>

        <h3>Properties</h3>
        <div class="row">
            <div class="col-md-12">
                @foreach (var property in Model.Properties)
                {
                    <div class="border p-2 mb-2">
                        <h6 class="mb-1">
                            <samp>
                                @string.Join(' ', property.Modifiers) @property.Type @property.Name

                                <span>{ </span>

                                @if (property.HasGetter)
                                {
                                    @string.Join(' ', property.GetterModifiers)
                                    <span class="text-primary">get</span><span>; </span>
                                }
                                @if (property.HasSetter)
                                {
                                    @string.Join(' ', property.SetterModifiers)
                                    <span class="text-primary">set</span><span>; </span>
                                }

                                <span>}</span>
                            </samp>
                        </h6>
                        <p class="text-muted mb-0">
                            <i>@property.DocComment</i>
                        </p>
                        <ul class="list-inline mb-0">
                        </ul>
                    </div>
                }
            </div>
        </div>

        <h2>Methods</h2>
        <div class="row">
            <div class="col-md-12">
                @foreach (var method in Model.Methods)
                {
                    <div class="border p-2 mb-2">
                        <h5 class="mb-1">
                            <kbd>
                                @string.Join(' ', method.Modifiers) @method.ReturnType @method.Name
                            </kbd>
                        </h5>
                        <p class="text-muted mb-0">
                            <i>@method.DocComment</i>
                        </p>

                        @if (method.Parameters.Any())
                        {
                            <h5>Parameters</h5>
                            @foreach (var parameter in method.Parameters)
                            {
                                <div>
                                    @string.Join(' ', parameter.Modifiers) @parameter.Type @parameter.Name
                                </div>
                                <p>
                                    <i>@parameter.DocComment</i>
                                </p>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
