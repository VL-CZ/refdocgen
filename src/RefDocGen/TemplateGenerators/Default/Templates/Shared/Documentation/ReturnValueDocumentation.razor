@using RefDocGen.TemplateGenerators.Default.TemplateModels.Types
@inherits ComponentBase

@code {

    [Parameter]
    public required TypeLinkTM Type { get; set; }

    [Parameter]
    public required string? DocComment { get; set; }
}

<h3 class="lead my-2">Returns</h3>
<div class="mx-2">
    <samp>
        <TypeLink Type="@Type" />
    </samp>
    <div class="text-muted">
        @if (DocComment is not null)
        {
            <i>@((MarkupString)DocComment)</i>
        }
    </div>
</div>
