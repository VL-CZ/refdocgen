@using RefDocGen.TemplateProcessors.Shared.TemplateModels.Assemblies
@using RefDocGen.TemplateProcessors.Shared.TemplateModels.Language
@using RefDocGen.TemplateProcessors.Shared.TemplateModels.Menu
@inherits ComponentBase

@code {

    /// <summary>
    /// Template model representing the assembly.
    /// </summary>
    [Parameter]
    public required AssemblyTM Model { get; set; }

    /// <summary>
    /// The links and folders to be included in the top menu.
    /// </summary>
    [Parameter]
    public required TopMenuDataTM TopMenuData { get; set; }

    /// <summary>
    /// An array containing the available versions of the page;
    /// for each version, its identifier is stored.
    ///
    /// <c>null</c>, if the documentation is not versioned.
    /// </summary>
    [Parameter]
    public required string[]? Versions { get; set; }

    /// <summary>
    /// An array of the available languages.
    /// </summary>
    [Parameter]
    public required LanguageTM[] Languages { get; set; }

    /// <summary>
    /// Name of the assembly/project/solution to be documented (without file extension).
    /// </summary>
    [Parameter]
    public required string ProjectName { get; set; }
}

@*
    This template should display all relevant information about an assembly, including list of the contained namespaces and types.
*@
