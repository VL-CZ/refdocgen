@using RefDocGen.TemplateGenerators.Default.TemplateModels.Members
@inherits ComponentBase

@code {
    [Parameter]
    public required PropertyTM[] Properties { get; set; }
}

<h2 class="display-5 mt-2">Properties</h2>
<div class="row">
    <div class="col-md-12">
        @foreach (var property in Properties)
        {
            <div class="border p-2 mb-2">
                <h6 class="mb-1">
                    <samp>
                        <span class="text-primary">
                            @string.Join(' ', property.Modifiers)
                        </span>

                        <TypeLink Type="@property.Type" />

                        <span class="text-dark">
                            @property.Name
                        </span>

                        <AccessorMethods HasGetter="property.HasGetter"
                                         HasSetter="property.HasSetter"
                                         GetterModifiers="property.GetterModifiers"
                                         SetterModifiers="property.SetterModifiers" />

                        <LiteralValueSuffix Value="@property.ConstantValue" />
                    </samp>
                </h6>

                <SummaryDocumentation DocComment="@property.SummaryDocComment" />

                <ValueDocumentation DocComment="@property.ValueDocComment" />

                <!-- Remarks doc comment -->
                <RemarksDocumentation DocComment="@property.RemarksDocComment" />

                <ExceptionsDocumentation Exceptions="@property.Exceptions" />

                <SeeAlsoDocumentation DocComments="@property.SeeAlsoDocComments" />
            </div>
        }
    </div>
</div>
