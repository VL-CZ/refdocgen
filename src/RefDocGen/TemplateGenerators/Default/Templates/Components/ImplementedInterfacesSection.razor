@inherits ComponentBase

@code {
    [Parameter]
    public required GenericTypeLinkTM[] ImplementedInterfaces { get; set; }
}

<!-- Implemented interfaces -->
@if (ImplementedInterfaces.Any())
{
    <div data-id="implemented-interfaces">
        <i>Implements:&nbsp;</i>
        <samp>
            @foreach (var iface in ImplementedInterfaces)
            {
                <GenericTypeLink Type="@iface" />

                @if (iface != ImplementedInterfaces.Last())
                {
                    <span>, </span>
                }
            }
        </samp>
    </div>
}
