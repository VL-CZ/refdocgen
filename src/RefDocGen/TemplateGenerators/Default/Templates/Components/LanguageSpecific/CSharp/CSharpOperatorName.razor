@inherits ComponentBase
@using RefDocGen.TemplateGenerators.Default.Templates.Components.LanguageSpecific.CSharp.Utils

@code {
    [Parameter]
    public required OperatorTM Operator { get; set; }
}


<span class="refdocgen-text-tertiary">
    @string.Join(' ', Operator.Modifiers.CSharpData)
</span>
<span></span>

@if (!Operator.IsConversionOperator)
{
    <TypeLink Type="@Operator.ReturnType" />
}

<span></span>
<span class="refdocgen-text-primary">
    @Operator.Name.CSharpData
</span><TypeParametersString TypeParameters="@Operator.TypeParameters" /><ParametersString Parameters="@Operator.Parameters" />
