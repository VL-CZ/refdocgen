@inherits ComponentBase

@code {
    [Parameter]
    public required NamespaceTM Model { get; set; }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Namespaces</title>

    <!-- Custom global CSS -->
    <link href="./Static/styles.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>

    <nav class="navbar navbar-expand-lg sticky-top bg-dark" data-bs-theme="dark">
        <div class="container">
            <a class="navbar-brand" href="#">Project name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <!-- <a class="nav-link active" aria-current="page" href="#">Home</a> -->
                    <a class="nav-link" href="./index.html">Home</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container my-4">

        <h1 class="display-4">
            <samp>
                <span class="text-primary">namespace</span>
                <span class="text-dark">@Model.Name</span>
            </samp>
        </h1>
        <hr />

        <!-- Classes -->
        @if (Model.Classes.Any())
        {
            <h2 class="display-5">Classes</h2>
            <table class="table">
                <tbody>
                    @foreach (var type in Model.Classes)
                    {
                        <TypeNameRow Type="@type" />
                    }
                </tbody>
            </table>
        }

        <!-- Structures -->
        @if (Model.ValueTypes.Any())
        {
            <h2 class="display-5">Structs</h2>
            <table class="table">
                <tbody>
                    @foreach (var type in Model.ValueTypes)
                    {
                        <TypeNameRow Type="@type" />
                    }
                </tbody>
            </table>
        }

        <!-- Interfaces -->
        @if (Model.Interfaces.Any())
        {
            <h2 class="display-5">Interfaces</h2>
            <table class="table">
                <tbody>
                    @foreach (var type in Model.Interfaces)
                    {
                        <TypeNameRow Type="@type" />
                    }
                </tbody>
            </table>
        }

        <!-- Enums -->
        @if (Model.Enums.Any())
        {
            <h2 class="display-5">Enums</h2>
            <table class="table">
                <tbody>
                    @foreach (var type in Model.Enums)
                    {
                        <TypeNameRow Type="@type" />
                    }
                </tbody>
            </table>
        }

        <!-- Delegates -->
        @if (Model.Delegates.Any())
        {
            <h2 class="display-5">Delegates</h2>
            <table class="table">
                <tbody>
                    @foreach (var type in Model.Delegates)
                    {
                        <TypeNameRow Type="@type" />
                    }
                </tbody>
            </table>
        }

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
