@inherits ComponentBase

@code {
    [Parameter]
    public required LocalizedData<string[]> Modifiers { get; set; }

    [Parameter]
    public required string TypeName { get; set; }

    [Parameter]
    public required TypeParameterTM[] TypeParameters { get; set; } = [];
}

<h1 class="display-4" data-id="type-name-title">
    <samp>
        <TypeDeclName Modifiers="@Modifiers" TypeName="@TypeName" TypeParameters="@TypeParameters" />
    </samp>
</h1>
