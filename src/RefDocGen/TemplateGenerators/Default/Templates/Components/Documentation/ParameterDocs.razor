@using RefDocGen.TemplateGenerators.Default.TemplateModels.Members
@inherits ComponentBase

@code {
    [Parameter]
    public required IEnumerable<ParameterTM> Parameters { get; set; }
}

@if (Parameters.Any())
{
    <h3 class="lead my-2">Parameters</h3>
    <div class="mx-2">
        @foreach (var parameter in Parameters)
        {
            <samp>
                <ParameterName Parameter="@parameter" />
            </samp>

            <div class="text-muted mb-2">
                @if (parameter.DocComment is not null)
                {
                    <i>@((MarkupString)parameter.DocComment)</i>
                }
            </div>
        }
    </div>
}
