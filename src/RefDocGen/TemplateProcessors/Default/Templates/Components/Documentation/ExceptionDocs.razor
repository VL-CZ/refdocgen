@using RefDocGen.TemplateProcessors.Shared.TemplateModels.Types
@inherits ComponentBase

@code {
    [Parameter]
    public required IEnumerable<ExceptionTM> Exceptions { get; set; }
}

@if (Exceptions.Any())
{
    <div class="mt-3">
        <div class="lead">Exceptions</div>
        <div class="mx-3" data-id="exception-section">
            @foreach (var exception in Exceptions)
            {
                <div data-id="exception-data">
                    <samp data-id="exception-type" class="text-break">
                        <CodeLink Type="@exception.Type" />
                    </samp>

                    <div class="text-body-secondary fst-italic mb-2" data-id="exception-doc">
                        @if (exception.DocComment is not null)
                        {
                            @((MarkupString)exception.DocComment)
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}
